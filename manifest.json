{
  "manifest_version": 2,

  "name": "Simple CRM",
  "version": "1.1",
  "description": "grub data from estate sites to firebase",

  "permissions": [
    "<all_urls>",
    "tts",
    "tabs"
    //"http://*.facebook.com/*"
  ],

  "background": {
    //"persistent": true,
    "scripts": [
      // external libs
      "firebase.js",

      // utils
      "constants.js",
      "utils.js",
      "firebase_utils.js",
      "chrome_utils.js",

      // interfaces
      "crm_interface.js",
      "tsn_interface.js",

      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "home.png",
    "default_title": "simple CRM",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "minimum_chrome_version": "14",

  "content_scripts": [
    {
      "matches": [
        "http://tsnbase.ru/*",
        "https://blistering-heat-2586.firebaseapp.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "all_frames": true,
      "js": [
        // external libs
        "firebase.js",
        "jquery-1.11.2.js",

        // utils
        "constants.js",
        "utils.js",
        "firebase_utils.js",
        "chrome_utils.js",

        // interfaces
        "crm_interface.js",
        "tsn_interface.js",

        "tsn_handler.js",
        "scrm_handler.js"
      ]
    }
  ],

  "icons": {
    "40": "home.png",
    "48": "home.png",
    "128": "home.png",
    "256": "home.png"
  },

  "web_accessible_resources": [
    "appl_logo_plus.png",
    "appl_logo.png"
  ],

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"

}
